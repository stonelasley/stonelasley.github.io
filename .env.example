# Notion API Configuration
# Copy this file to .env.local and fill in your actual values

# Notion API Key (Internal Integration Token)
# Get this from: https://www.notion.so/my-integrations
NOTION_API_KEY=your_notion_api_key_here

# Blog Database ID
# Find this in the URL of your Notion database
# Example: https://www.notion.so/your-workspace/DATABASE_ID?v=...
BLOG_DATABASE_ID=your_blog_database_id_here

# Recipe Database ID
# Find this in the URL of your Notion database
RECIPE_DATABASE_ID=your_recipe_database_id_here

# Ingredient Database ID
# Database containing all ingredients
INGREDIENT_DATABASE_ID=your_ingredient_database_id_here

# RecipeIngredient Junction Table Database ID
# Junction table connecting recipes to ingredients with quantities and units
RECIPE_INGREDIENT_DATABASE_ID=your_recipe_ingredient_database_id_here
